<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/admin-inventory-style.css">
<title>Inventory</title>
</head>
    <body>
      <div class="container-fluid">
    <div class="row">

      <!-- SIDEBAR -->
      <div class="col-1">
        <div class="d-flex flex-column sidebar expand">
          <!-- MENU TEXT -->
          <div class="d-flex justify-content-center align-items-center">

            <button class="toggle-btn d-flex flex-row align-items-center justify-content-center" type="button">
              <div class="d-block link-dark text-decoration-none sidebar-body menu-text mt-4 pt-3 ">
                <p class="text-center mb-1">Menu</p>
              </div>

              <div class="d-flex align-items-end mt-4 pt-3" style="margin-top: auto;">
                    <i class="bi bi-grid-fill fw-bold "></i>
              </div>
            </button>
          </div>

          <ul class="nav nav-pills nav-flush flex-column mb-auto text-center">
            <!-- INVENTORY -->
            <li class="my-2">
              <a href="#" class="nav-link" title="Dashboard" data-bs-toggle="tooltip"
                data-bs-placement="right">
                <div class="border_box">
                <i class="bi bi-database nav-icons"></i>
                <p>Inventory</p>
                </div>
              </a>
            </li>

            <!-- REPORTS -->
            <li class="my-2">
              <a href="#" class="nav-link py-3 border_top" title="Orders" data-bs-toggle="tooltip" data-bs-placement="right">
                  <i class="bi bi-clipboard-data"></i>
                  <p>Reports</p>
              </a>
            </li>

            <!-- MANAGE -->
            <li class="my-2">
              <a href="#" class="nav-link border_top" title="Products" data-bs-toggle="tooltip"
                data-bs-placement="right">
                <i class="bi bi-person-circle"></i>
                <p>Manage</p>
              </a>
            </li>
          </ul>

          <!-- SIGN OUT -->
          <div class="nav-link-exit nav-link">
            <a href="/logout"
              class="d-flex flex-column align-items-center justify-content-center link-dark text-decoration-none">
              <i class="bi bi-escape"></i>
              <p class="d-block p-exit">Sign Out</p>
            </a>
          </div>
        </div>
      </div>
      <!-- END OF NAVBAR -->

      <!-- YOUR CONTENT SHOULD BE HERE -->
      <main class="col-11">
      <h2 class="page-title m-4">Inventory</h2>
      <div class="row mt-5 ms-2 align-items-center">
        <div class="col-sm-4">
            <span>150 total products</span>
        </div>
        <div class="col-sm-4">
            <h2 class="page-title">Current Stocks</h2>
        </div>
        <div class="col-sm-4">
            <div class="button-container">
                <a href="/products">
                    <button type="button" name="add" value="add">Add product</button>
                </a>
            </div>
        </div>
      </div>
      <div class="row mx-3 my-3">
        <div id="product-details" col-sm-6 me-3 rounded-3">
                <div class="d-flex m-3">
                    <span id="edit-text">Edit</span>
                    <button type="button" rel="tooltip" class="btn btn-success btn-just-icon btn-sm">
                    <i class="fas fa-pen"></i>
                    </button>
                </div>
                <img class="mt-2 rounded" id="product-image" src="{{ initial_item.image_path }}" width="470" height="280">
                <div id="inner-details" class="mt-4 ms-4 w-60">
                    <h3 id="product-name">{{ initial_item.name }}</h3>
                    <p id="product-description">{{ initial_item.description }}</p>
                    <p class="d-flex justify-content-end me-5" id="product-price">â‚± {{ initial_item.price }} PHP</p>
                </div>
        </div>
        <div class="stocks col-sm-6">
            <table id="myTable" class="table table-hover">
                <tbody>
                {% for item in stocks %}
                <tr data-id="{{ item.id }}" onclick="fetchProductDetails({{ item.id }})">
                <td>
                    <img src="{{ item.image_path }}" alt="Rose" width="90" height="90" class="rounded">
                </td>
                <td>{{ item.product_type }}</td>
                <td>{{ item.name }}</td>
                <td>{{ item.stock_quantity }}</td>
                <td>{{ item.price }}</td>
                <td>
                    <button id="edit-button" type="button" rel="tooltip" class="btn btn-success btn-just-icon btn-sm" data-bs-toggle="modal"data-bs-target="#edit_form">
                    <i class="fas fa-pen"></i>
                    </button>
<div class="modal fade mt-5" id="edit_form" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Edit Product</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-sm-6 mb-3">
                        <input type="text" class="form-control" placeholder="Name" name="name" value="{{ item.name }}" required>
                        </div>
                    <div class="col-sm-6 mb-3">
                        <input type="number" class="form-control" placeholder="Enter number of stocks" min="0" name="stock" value="{{ item.stock_quantity }}" required>
                    </div>
                    </div>
                    <div class="mb-3">
                        <textarea class="form-control" placeholder="Enter description" name="description" rows="4">{{ item.description }}</textarea>
                    </div>
                    <div class="mb-3">
                        <input type="number" class="form-control" placeholder="Enter price" name="price" min="0" step="0.01"  value="{{ item.price }}" required>
                    </div>
                    <div class="button-container text-center">
                        <button type="submit" name="submit" value="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
                    <button id="delete-button" type="button" rel="tooltip" class="btn btn-danger btn-just-icon btn-sm" onclick="deleteProduct({{ item.id }})">
                    <i class="fas fa-trash"></i>
                    </button>
                </td>
                </tr>
                {% endfor %}
                </tbody>
                </table>
        </div>
      </div>
      </main>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
  crossorigin="anonymous"></script>
  <script src="js/sidebar.js"></script>
  <script src="js/inventory.js"></script>
    </body>
</html>
